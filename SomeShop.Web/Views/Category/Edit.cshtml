@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="" style="color:var(--highlight)">Edit Category</h2>
            <hr />
        </div>
        @*        <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn main-btn" style="width:150px">Save Changes</button>
            <a asp-controller="Category" asp-action="Index" class="btn main-btn" style="width:150px">Back To List</a>
        </div>
    </div>

</form>
