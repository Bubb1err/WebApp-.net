@model IEnumerable<Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="" style="color:var(--highlight);">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn main-btn">
                @*<i class="bi bi-plus-circle"></i>*@ &nbsp;Create New Category</a>
            <a asp-controller="AddingProductController" asp-action="Add" class="btn main-btn">
                @*<i class="bi bi-plus-circle"></i>*@ &nbsp;Add Product
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%"><a asp-controller="AddingProductController" asp-action="Index" asp-route-id="@obj.Id">@obj.Name</a></td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn main-btn mx-2">@*<i class="bi bi-pencil-square"></i>*@ Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" 
                            class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

